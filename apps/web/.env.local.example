# Receipt Organizer - Environment Configuration
# Copy this file to .env.local and update with your values
# DO NOT commit .env.local to version control

# ===========================================
# REQUIRED: Supabase Configuration
# ===========================================

# Your Supabase project URL (found in Dashboard → Settings → API)
NEXT_PUBLIC_SUPABASE_URL=https://your-project-ref.supabase.co

# Your Supabase anonymous key (safe for browser, found in Dashboard → Settings → API → anon public)
NEXT_PUBLIC_SUPABASE_ANON_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-anon-key-here

# ===========================================
# PRODUCTION ONLY: Server-side Configuration
# ===========================================

# Your Supabase service role key (KEEP SECRET! Only for server-side operations)
# Found in Dashboard → Settings → API → service_role
# WARNING: Never expose this key in client-side code or commit to version control
SUPABASE_SERVICE_ROLE_KEY=eyJhbGciOiJIUzI1NiIsInR5cCI6IkpXVCJ9.your-service-role-key-here

# ===========================================
# OPTIONAL: Session Configuration
# ===========================================

# Session timeout in minutes (default: 30)
# After this time, users will be automatically logged out
NEXT_PUBLIC_SESSION_TIMEOUT_MINUTES=30

# Warning time before session expires in minutes (default: 5)
# Users will see a warning this many minutes before timeout
NEXT_PUBLIC_SESSION_WARNING_MINUTES=5

# ===========================================
# OPTIONAL: Feature Flags
# ===========================================

# Enable/disable authentication system (default: true)
# Set to false to bypass auth for testing
AUTH_ENABLED=true

# Enable auth bypass mode for testing (default: false)
# WARNING: Only use in development!
AUTH_BYPASS_MODE=false

# ===========================================
# DEVELOPMENT: Local Testing
# ===========================================

# Node environment (development, test, production)
# Automatically set by Next.js, override only if needed
# NODE_ENV=development

# Port for development server (default: 3002)
# PORT=3002
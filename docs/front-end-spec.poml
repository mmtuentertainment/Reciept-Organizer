              if (battery.level &lt; 0.15) {
                return {
                  ocrQuality: 'low',
                  animations: false,
                  autoProcess: false,
                  brightness: 0.5
                };
              }
              
              if (battery.charging) {
                return {
                  ocrQuality: 'high',
                  animations: true,
                  autoProcess: true,
                  brightness: 1.0
                };
              }
              
              return {
                ocrQuality: 'medium',
                animations: true,
                autoProcess: battery.level &gt; 0.3,
                brightness: 0.8
              };
            }

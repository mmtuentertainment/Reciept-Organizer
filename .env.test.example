# Test Environment Configuration
# Copy this to .env.test and update with your test Supabase project details

# Supabase Test Project
NEXT_PUBLIC_SUPABASE_URL=https://test-project.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-test-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-test-service-key

# Test Database
DATABASE_URL=postgresql://postgres:password@localhost:54322/postgres

# Test Environment Flag
NODE_ENV=test
FLUTTER_ENV=test
EXPO_PUBLIC_ENV=test

# Feature Flags
AUTH_ENABLED=false
AUTH_BYPASS_MODE=true
SKIP_AUTH_CHECKS=true

# Test User Credentials
TEST_USER_EMAIL=test@example.com
TEST_USER_PASSWORD=<set-test-password>
TEST_ADMIN_EMAIL=admin@example.com
TEST_ADMIN_PASSWORD=<set-admin-password>

# Session Configuration (Shorter for testing)
SESSION_TIMEOUT_WEB=300        # 5 minutes for testing
SESSION_TIMEOUT_MOBILE=600     # 10 minutes for testing

# Monitoring
ENABLE_AUTH_MONITORING=true
LOG_LEVEL=debug
# Test Environment Configuration
# Copy this to .env.test for testing with isolated test users
# Uses production Supabase with test user prefix isolation (MVP approach)

# Supabase Configuration (Production with test isolation)
# We use the same production instance but isolate test users with prefix
NEXT_PUBLIC_SUPABASE_URL=https://xbadaalqaeszooyxuoac.supabase.co
NEXT_PUBLIC_SUPABASE_ANON_KEY=your-production-anon-key
SUPABASE_SERVICE_ROLE_KEY=your-service-key  # Optional: for cleanup scripts

# Test Environment Flags
NODE_ENV=test
FLUTTER_ENV=test
EXPO_PUBLIC_ENV=test
TEST_MODE=true

# Test User Configuration
TEST_USER_PREFIX=test_                    # All test users start with this
TEST_USER_EMAIL=test_basic@example.com
TEST_USER_PASSWORD=<set-test-password>
TEST_ADMIN_EMAIL=test_admin@example.com
TEST_ADMIN_PASSWORD=<set-admin-password>

# Test Isolation Settings
TEST_AUTO_CLEANUP=true                    # Auto-delete test data after tests
TEST_CLEANUP_AFTER_HOURS=24              # Clean test users older than this
MAX_TEST_USERS=50                        # Limit concurrent test users
TEST_USER_METADATA={"test_user": true}   # Mark test users in metadata

# Feature Flags
AUTH_ENABLED=true                        # Keep auth enabled for integration tests
AUTH_TEST_MODE=true                      # Enable test-specific behaviors
ALLOW_TEST_USER_CREATION=true           # Allow creating test users via API
AUTH_DISABLE_FLAG=false                  # Emergency auth disable switch

# Session Configuration (Shorter for testing)
SESSION_TIMEOUT_WEB=300                  # 5 minutes for testing
SESSION_TIMEOUT_MOBILE=600               # 10 minutes for testing

# Monitoring
ENABLE_AUTH_MONITORING=true
LOG_LEVEL=debug
MONITOR_TEST_USERS=true
ALERT_ON_TEST_FAILURES=false